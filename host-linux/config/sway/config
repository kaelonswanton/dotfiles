### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term alacritty

# Your preferred application launcher
set $menu tofi-run | xargs swaymsg exec --

# Workspace names
set $ws1 main
set $ws2 web
set $ws3 chat
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8

include $HOME/.config/sway/autostart.sway.config
include $HOME/.config/sway/keybinds.sway.config
include $HOME/.config/sway/style.sway.config
include $HOME/.config/sway/assignments.sway.config
include $HOME/.config/sway/status_bar.sway.config

include @sysconfdir@/sway/config.d/*
