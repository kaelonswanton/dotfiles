#!/usr/bin/env bash
set -e
set -u

# A wrapper around different OS paste buffers
# @example
#   run_some_command | copy
#
# @example Copy a file's contents
#   copy < file.txt
#
# @see https://evanhahn.com/scripts-i-wrote-that-i-use-all-the-time/

if hash pbpaste 2>/dev/null; then
  exec pbpaste
elif hash xclip 2>/dev/null; then
  exec xclip -selection clipboard -o
elif [[ -e /tmp/clipboard ]]; then
  exec cat /tmp/clipboard
else
  echo ''
fi
