#!/usr/bin/env bash
set -e
set -u

# A wrapper around different OS copy buffers
# @example
#   run_some_command | copy
#   pasta > file_from_my_clipboard.txt
#
# @see https://evanhahn.com/scripts-i-wrote-that-i-use-all-the-time/

if hash pbcopy 2>/dev/null; then
  exec pbcopy
elif hash xclip 2>/dev/null; then
  exec xclip -selection clipboard
elif hash putclip 2>/dev/null; then
  exec putclip
else
  rm -f /tmp/clipboard 2> /dev/null

  if [ $# -eq 0 ]; then
    cat > /tmp/clipboard
  else
    cat "$1" > /tmp/clipboard
  fi
fi
